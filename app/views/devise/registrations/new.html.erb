<h2>新規登録</h2>

<%= form_with model: @shafu, url: shafu_registration_path, local: true do |f| %>

  <div class="field">
      <label>メールアドレス</label>
      <%= f.email_field :email, autofocus: true, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
      <label>パスワード</label>
      <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
      <span>※英字と数字の両方を含めて設定してください</span>
  </div>

  <div class="field">
    <label>パスワード(確認)</label>
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力" %>
  </div>

  <div class="field">
    <label>名前(全角)</label>
    <%= f.text_field :lname, placeholder: "例）山田" %>
    <%= f.text_field :fname, placeholder: "例）太郎" %>
  </div>

  <div class="field">
    <label>名前カナ(全角)</label>
    <%= f.text_field :lname_katakana, placeholder: "例）ヤマダ" %>
    <%= f.text_field :fname_katakana, placeholder: "例）タロウ" %>
  </div>

  <div class="field">
    <label>生年月日</label>
      <%= raw sprintf(
        f.date_select(
          :birthday,
          use_month_numbers: true,
          prompt:'--',
          start_year: (Time.now.year - 5),
          end_year: 1930,
          date_separator: '%s'),
        "<span> 年 </span>", "<span> 月 </span>") + "<span> 日 </span>" %>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>